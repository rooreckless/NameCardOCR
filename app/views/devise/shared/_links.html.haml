- if controller_name != 'sessions'
  = link_to "ログイン画面へ移動しますか?", new_session_path(resource_name),class:"devise_body--link"
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "新規ユーザ登録画面へ移動しますか?", new_registration_path(resource_name),class:"devise_body--link"
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "パスワードを忘れた場合", new_password_path(resource_name),class:"devise_body--link"
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class:"devise_body--link"
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class:"devise_body--link"
  %br/
