= render 'partial/header'
.searchnormform-outer
  .searchnormform-inner
    =form_with model: @card ,class:"searchnormform-inner__form",id:"searchnormform-inner__form",local: true,url: {controller: 'cards', action: 'searchnormaltext' }, method: :post do |f|
      名刺の検索条件を入力
      .searchnormform-inner__form__row
        =f.label :名前,class:"searchnormform-inner__form__row--label"
        =f.text_field :name,class:"searchnormform-inner__form__row--input",placeholder:"名前"
      .searchnormform-inner__form__row
        =f.label :会社名,class:"searchnormform-inner__form__row--label"
        =f.text_field :company,class:"searchnormform-inner__form__row--input",placeholder:"会社名"
      .searchnormform-inner__form__row
        =f.label :部署名,class:"searchnormform-inner__form__row--label"
        =f.text_field :department,class:"searchnormform-inner__form__row--input",placeholder:"部署名"
      .searchnormform-inner__form__row
        =f.label :住所,class:"searchnormform-inner__form__row--label"
        =f.text_field :address,class:"searchnormform-inner__form__row--input",placeholder:"住所"
      .searchnormform-inner__form__row
        =f.label :電話番号,class:"searchnormform-inner__form__row--label"
        =f.text_field :tel,class:"searchnormform-inner__form__row--input",placeholder:"電話番号"
      .searchnormform-inner__form__row
        =f.label :メールアドレス,class:"searchnormform-inner__form__row--label"
        =f.text_field :email,class:"searchnormform-inner__form__row--input",placeholder:"メールアドレス"
      .searchnormform-inner__form__btns
        =f.submit "検索開始",id:"card__normalsearchstartbtn",class:"searchnormform-inner__form--submit btnrad btnrad--blue"
    .searchnormform-inner__results
= render 'partial/footer'